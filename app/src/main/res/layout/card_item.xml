<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fancyfood.foodmatch.views.SquareImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/ivDish"
                android:background="@drawable/pizza"/>

            <View
                android:id="@+id/item_swipe_left_indicator"
                android:alpha="0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#A5F" />

            <View
                android:id="@+id/item_swipe_right_indicator"
                android:alpha="0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#5AF"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Napolitana"
                android:id="@+id/tvDish"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary"
                android:layout_below="@+id/ivDish"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marco Polo - Prenzlauer Berg"
                android:id="@+id/tvLocation"
                android:layout_below="@+id/tvDish"
                android:layout_alignLeft="@+id/tvDish"
                android:layout_alignStart="@+id/tvDish"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="-2dp"
                android:textSize="12sp"
                android:textColor="@color/colorTextSecondary"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPricing"
                android:src="@drawable/dollar"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:alpha=".4"
                android:layout_alignTop="@+id/tvDistance"
                android:layout_alignBottom="@+id/tvDistance"
                android:layout_alignLeft="@+id/item_swipe_right_indicator"
                android:layout_alignStart="@+id/item_swipe_right_indicator"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dollar"
                android:alpha=".4"
                android:layout_toLeftOf="@+id/tvPricing"
                android:layout_marginRight="-10dp"
                android:layout_alignTop="@+id/tvPricing"
                android:layout_alignBottom="@+id/tvPricing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500m"
                android:id="@+id/tvDistance"
                android:layout_alignBottom="@+id/tvLocation"
                android:layout_toLeftOf="@+id/tvPricing"
                android:layout_toStartOf="@+id/tvPricing"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textColor="@color/colorTextDisabled"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignBottom="@+id/tvLocation"
                android:layout_toLeftOf="@+id/tvDistance"
                android:src="@drawable/place"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="4dp"
                android:layout_alignTop="@+id/tvDish"
                android:layout_marginTop="2dp"
                android:alpha=".4" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</FrameLayout>